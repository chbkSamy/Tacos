{% extends 'base.html.twig' %}
{% block body %}
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Tacos</h1>
                <p class="lead text-body-secondary">Découvrez nos tacos.</p>
            </div>
        </div>

        <div class="row">
            {% set images = [
                { 'url': '', 'nom': 'Tacos M', 'description': 'Tacos une viande au choix, accompagné de sa sauce au choix.' },
                { 'url': '', 'nom': 'Tacos L', 'description': 'Tacos deux viandes au choix, accompagné de sa sauce au choix.' },
                { 'url': '', 'nom': 'Tacos XL', 'description': 'Description personnalisée pour Tacos XL.' },
                { 'url': '', 'nom': 'Le Klassic', 'description': 'Description personnalisée pour Le Klassic.' },
                { 'url': '', 'nom': 'Forceaoit', 'description': 'Description personnalisée pour Forceaoit.' },
            ] %}

            {% for image in images %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ image.url }}" class="card-img-top" alt="{{ image.nom }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ image.nom }}</h5>
                            <p class="card-text">{{ image.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
