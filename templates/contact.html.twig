{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        /* Ajoutez vos styles personnalisés ici */
    </style>
{% endblock %}

{% block body %}
    <div class="album py-5 bg-body-tertiary">
        <div class="container text-center">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <div class="col-md-5 col-lg-4 order-md-last">
                    <!-- Remove unnecessary ul tag -->
                </div>
                <div class="col-md-7 col-lg-8">
                    <h4 class="mb-3">Création de compte</h4>
                    <form class="needs-validation" novalidate>
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label for="firstName" class="form-label">Prénom</label>
                                <input type="text" class="form-control" id="firstName" placeholder="" value="" required>
                                <div class="invalid-feedback">
                                    Le prénom est requis.
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label for="lastName" class="form-label">Nom de famille</label>
                                <input type="text" class="form-control" id="lastName" placeholder="" value="" required>
                                <div class="invalid-feedback">
                                    Le nom de famille est requis.
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="you@example.com">
                                <div class="invalid-feedback">
                                    Veuillez entrer une adresse email valide.
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="address" class="form-label">Adresse</label>
                                <input type="text" class="form-control" id="address" placeholder="12 Rue Francis Ngannou" required>
                                <div class="invalid-feedback">
                                    Veuillez entrer votre adresse.
                                </div>
                            </div>

                            <div class="col-md-5">
                                <label for="country" class="form-label">Pays</label>
                                <select class="form-select" id="country" required>
                                    <option value="">Choisissez...</option>
                                    <option>France</option>
                                </select>
                                <div class="invalid-feedback">
                                    Veuillez sélectionner un pays valide.
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="state" class="form-label">Département</label>
                                <select class="form-select" id="state" required>
                                    <option value="">Choisissez...</option>
                                    <option>Nord</option>
                                </select>
                                <div class="invalid-feedback">
                                    Veuillez fournir un département valide.
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="zip" class="form-label">Code postal</label>
                                <input type="text" class="form-control" id="zip" placeholder="" required>
                                <div class="invalid-feedback">
                                    Code postal requis.
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <button class="w-100 btn btn-primary btn-lg" type="submit">Créer son compte</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
